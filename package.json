{
  "name": "d3-xhr",
  "version": "0.0.3",
  "description": "A convenient alternative to XMLHttpRequest.",
  "keywords": [
    "d3",
    "xhr",
    "ajax",
    "XMLHttpRequest"
  ],
  "homepage": "https://github.com/d3/d3-xhr",
  "license": "BSD-3-Clause",
  "author": {
    "name": "Mike Bostock",
    "url": "http://bost.ocks.org/mike"
  },
  "main": "build/xhr",
  "jsnext:main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/d3/d3-xhr.git"
  },
  "scripts": {
    "pretest": "mkdir -p build && d3-bundler --polyfill-map --format=umd --name=xhr -- index.js > build/xhr.js",
    "test": "faucet `find test -name '*-test.js'`",
    "prepublish": "npm run test && uglifyjs build/xhr.js -c -m -o build/xhr.min.js"
  },
  "devDependencies": {
    "d3-bundler": "~0.2.5",
    "d3-dispatch": "~0.0.2",
    "faucet": "0.0",
    "tape": "4",
    "uglifyjs": "2"
  }
}
